import os, time, sys
sys.path.append('/opt/s87/bin/lib')
import log
processName = os.path.split(sys.argv[0])[1]
debug = False
if os.path.isfile('/opt/s87/DEBUG'):
        debug = True
        logging = log.LogFile(processName, '/tmp/' + processName + '.log')



def syncTime(server):
    out = os.popen('ntpdate -u ' + server).read()
    if 'no server suitable' in out:
        if debug: logging.warning(server + ' not available!')
        return False
    if debug: logging.info('timesync successfully. '+ out.replace(os.linesep, ''))
    return True


def setHWClock():
    os.popen('hwclock --systohc')
    return True


if debug: logging.info('starting...')
try:
    while True:
        r = syncTime('de.pool.ntp.org')
        if r == True:
            if debug: logging.info('set hwclock.')
            setHWClock()
            if debug: logging.info('wait 3600s...')
            time.sleep(3600)
        else:
            if debug: logging.info('wait 60s...')
            time.sleep(60)
except KeyboardInterrupt:
    print 'exit.'


