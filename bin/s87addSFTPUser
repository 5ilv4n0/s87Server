#!/usr/bin/env python

import os, sys


userName = raw_input('Username: ')

homeDir = '/foobar'
while not os.path.isdir(homeDir):
	homeDir = raw_input('HomeDir: ')

os.system('adduser ' + userName + ' --home ' + homeDir)
os.system('adduser ' + userName + ' sftp')
os.system('usermod ' + userName + ' -s /bin/false') 


